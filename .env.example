# Подключение к PostgreSQL базе данных
DATABASE_URL="postgresql://user:password@host:5432/database"

# NextAuth.js конфигурация
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3007"
AUTH_TRUST_HOST="true"

# Яндекс OAuth для админ-панели
AUTH_YANDEX_ID="your-yandex-client-id"
AUTH_YANDEX_SECRET="your-yandex-client-secret"

# Email конфигурация (Яндекс SMTP)
EMAIL_SERVER_HOST="smtp.yandex.ru"
EMAIL_SERVER_PORT=465
EMAIL_SERVER_USER="your-email@yandex.ru"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@yandex.ru"

# Порт сервера
PORT=3005

# AI API конфигурация (Groq)
GROQ_API_KEY="your-groq-api-key-here"
GROQ_MODEL="llama-3.3-70b-versatile"
AI_PROVIDER="groq"